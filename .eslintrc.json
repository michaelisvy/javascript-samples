{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true,
        "jest": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prefer-const": "error",
        "indent": "off",
        "quotes": "off",
        "eol-last": "off",
        "space-before-function-paren": "off",
        "comma-spacing": "off",
        "arrow-spacing": "off",
        "no-trailing-spaces": "off",
        "semi": "off",
        "space-infix-ops": "off",
        "keyword-spacing": "off",
        "space-in-parens": "off",
        "object-curly-spacing": "off",
        "func-call-spacing": "off",
        "dot-location": "off"
    }
}